@model IEnumerable<WebChatSignalR.Models.AppUser>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            @if (Model.Any())
            {
                <h1>List of User</h1>
                <div class="list-group">
                    @foreach (var user in Model)
                    {
                        <a asp-controller="Chat" asp-action="Index" asp-route-id="@user.Id" class="list-group-item list-group-item-action">@user.Name</a>
                    }
                </div>
            }
        </div>
    </div>
</div>